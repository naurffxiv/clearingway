{
  "formatters": {
    "enable": [
      "goimports"
    ],
    "exclusions": {
      "generated": "lax",
      "paths": [
        "main\\.go",
        "internal/clearingway/.*\\.go",
        "internal/discord/.*\\.go",
        "internal/fflogs/.*\\.go",
        "internal/ffxiv/.*\\.go",
        "internal/lodestone/.*\\.go",
        "internal/util/.*\\.go",
        "third_party$",
        "builtin$",
        "examples$"
      ]
    },
    "settings": {
      "goimports": {
        "local-prefixes": [
          "github.com/naurffxiv/clearingway"
        ]
      }
    }
  },
  "issues": {
    "max-issues-per-linter": 0,
    "max-same-issues": 0,
    "uniq-by-line": true
  },
  "linters": {
    "enable": [
      "gocritic",
      "gosec",
      "misspell",
      "nilerr",
      "revive",
      "unconvert"
    ],
    "exclusions": {
      "generated": "lax",
      "paths": [
        "main\\.go",
        "internal/clearingway/.*\\.go",
        "internal/discord/.*\\.go",
        "internal/fflogs/.*\\.go",
        "internal/ffxiv/.*\\.go",
        "internal/lodestone/.*\\.go",
        "internal/util/.*\\.go",
        "third_party$",
        "builtin$",
        "examples$"
      ],
      "rules": [
        {
          "linters": [
            "errcheck",
            "gosec"
          ],
          "path": "_test\\.go"
        },
        {
          "linters": [
            "gosec"
          ],
          "path": "internal/hmac/"
        },
        {
          "linters": [
            "govet"
          ],
          "text": "shadow: declaration of \"err\""
        },
        {
          "linters": [
            "gocritic"
          ],
          "text": "context.TODO"
        }
      ]
    },
    "settings": {
      "errcheck": {
        "check-blank": false,
        "check-type-assertions": true
      },
      "gocritic": {
        "disabled-checks": [
          "ifElseChain",
          "hugeParam",
          "rangeValCopy"
        ],
        "enabled-tags": [
          "diagnostic",
          "style",
          "performance"
        ]
      },
      "gosec": {
        "excludes": [
          "G104",
          "G307"
        ]
      },
      "govet": {
        "disable": [
          "shadow"
        ],
        "enable-all": true
      },
      "misspell": {
        "ignore-rules": [
          "clearingway",
          "naur",
          "ffxiv",
          "discord",
          "fflogs",
          "lodestone",
          "util"
        ],
        "locale": "US"
      },
      "revive": {
        "rules": [
          {
            "disabled": true,
            "name": "add-constant"
          },
          {
            "disabled": true,
            "name": "argument-limit"
          },
          {
            "disabled": true,
            "name": "banned-characters"
          },
          {
            "disabled": true,
            "name": "cognitive-complexity"
          },
          {
            "disabled": true,
            "name": "cyclomatic"
          },
          {
            "disabled": true,
            "name": "file-header"
          },
          {
            "disabled": true,
            "name": "function-length"
          },
          {
            "disabled": true,
            "name": "line-length-limit"
          },
          {
            "disabled": true,
            "name": "max-public-structs"
          },
          {
            "disabled": true,
            "name": "function-result-limit"
          }
        ]
      }
    }
  },
  "output": {
    "formats": {
      "text": {
        "path": "stdout",
        "print-issued-lines": true,
        "print-linter-name": true
      }
    }
  },
  "run": {
    "tests": true
  },
  "version": "2"
}
